<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/togglebutton1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="@string/texto_Show_Sensor_Features"
            android:textOn="@string/texto_Hide_Sensor_Features" />

        <ToggleButton
            android:id="@+id/togglebutton2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="@string/texto_Display_Real_time_Data"
            android:textOn="@string/texto_Hide_Real_time_Data" />

        <ToggleButton
            android:id="@+id/togglebuttonsave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="@string/texto_Save_Log_file"
            android:textOn="@string/texto_Stop_Saving_file" />
    </LinearLayout>


